<Window x:Name="Mapping_Dialog" x:Class="Snapshot.CMappingDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                d:DataContext="{d:DesignInstance Type=local:CMappingDialog}"
             xmlns:local="clr-namespace:Snapshot"
            Title="Map MIDI event"
            MinHeight="200"
            MinWidth="200"
            SizeToContent="WidthAndHeight"
            ResizeMode="NoResize"
            ShowInTaskbar="False"
            WindowStartupLocation="CenterOwner" 
            FocusManager.FocusedElement="{Binding ElementName=btnLearn}"
            mc:Ignorable="d" Margin="5" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock>Type</TextBlock>
            <ComboBox Name="cmbType" ItemsSource="{Binding TypeValues}" SelectedIndex="{Binding EventType}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>
            <TextBlock>Channel</TextBlock>
            <ComboBox Name="cmbChannel" ItemsSource="{Binding ChannelValues}" SelectedIndex="{Binding Channel}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>
            <TextBlock Name="txtPrimary">Note</TextBlock>
            <ComboBox Name="cmbPrimary" ItemsSource="{Binding PrimaryValues}" SelectedIndex="{Binding Primary}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>
            <TextBlock>Value</TextBlock>
            <ComboBox Name="cmbSecondary" ItemsSource="{Binding SecondaryValues}" SelectedIndex="{Binding Secondary}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>
            <Button Name="btnLearn" Width="200" Margin="0,5">Learn</Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button Name="btnOkay" IsDefault="True" Width="100" Click="btnOkay_Click">OK</Button>
            <Button Name="btnCancel" IsCancel="True" Width="100" Click="btnCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>

<UserControl x:Name="Main"  x:Class="Snapshot.GUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:Snapshot" d:DataContext="{d:DesignInstance Type=local:CSnapshotVM}"
             xmlns:bgInterfaces="clr-namespace:BuzzGUI.Interfaces;assembly=BuzzGUI.Interfaces"
             d:DesignHeight="500" d:DesignWidth="500" Height="500">
    <UserControl.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="1" />
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Margin" Value="2" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="3,2" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="5,0" />
        </Style>
    </UserControl.Resources>

    <Grid x:Name="MainGrid" MinHeight="200" Margin="0,0,0,8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <TreeView x:Name="MachineList" Grid.Row="0" ItemsSource="{Binding States}">
                <TreeView.ItemContainerStyle>
                    <!-- This Style binds a TreeViewItem to a TreeViewItemViewModel. -->
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding GotValue, UpdateSourceTrigger=PropertyChanged}"
                                 Value="True">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TreeView.ItemContainerStyle>

                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type local:CMachineStateVM}" ItemsSource="{Binding Children}">
                        <CheckBox IsThreeState="True" IsChecked="{Binding IsChecked}" Click="OnThreeStateClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding MachineName}" />
                            </StackPanel>
                        </CheckBox>
                    </HierarchicalDataTemplate>

                    <HierarchicalDataTemplate DataType="{x:Type local:CPropertyStateGroupVM}" ItemsSource="{Binding Children}">
                        <CheckBox IsThreeState="True" IsChecked="{Binding IsChecked}" Click="OnThreeStateClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </CheckBox>
                    </HierarchicalDataTemplate>

                    <HierarchicalDataTemplate DataType="{x:Type local:CTrackPropertyStateGroupVM}" ItemsSource="{Binding Children}">
                        <CheckBox IsThreeState="True" IsChecked="{Binding IsChecked}" Click="OnThreeStateClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </CheckBox>
                    </HierarchicalDataTemplate>

                    <DataTemplate DataType="{x:Type local:CPropertyStateVM}">
                        <CheckBox IsChecked="{Binding IsChecked}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text="{Binding Size}" />
                            </StackPanel>
                        </CheckBox>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock>Slot Name</TextBlock>
                <ComboBox ItemsSource="{Binding Slots, UpdateSourceTrigger=PropertyChanged}" IsEditable="True" SelectedIndex="{Binding Slot}" Text="{Binding SlotName, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ComboBoxItem}">
                            <Setter Property="FontWeight" Value="Normal" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasData}" Value="True">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock x:Name="txtInfoDisplay" TextWrapping="Wrap" Text="{Binding SelectionInfo, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <CheckBox x:Name="chkSelNew" Content="Select new machines" IsChecked="{Binding SelectNewMachines}"/>
                <CheckBox x:Name="chkCaptureOnSlot" Content="Capture on slot change" IsChecked="{Binding CaptureOnSlotChange}"/>
                <CheckBox x:Name="chkRestoreOnSlot" Content="Restore on slot change" IsChecked="{Binding RestoreOnSlotChange}"/>
                <CheckBox x:Name="chkRestoreOnLoad" Content="Restore on song load" IsChecked="{Binding RestoreOnSongLoad}"/>
                <CheckBox x:Name="chkRestoreOnStop" Content="Restore on transport stop" IsChecked="{Binding RestoreOnStop}"/>
                <Separator Height="9" />
                <Button x:Name="btnCapture" >
                    <Button.InputBindings>
                        <MouseBinding Command="{Binding cmdCapture}" MouseAction="LeftClick" />
                        <MouseBinding Command="{Binding cmdMap}" CommandParameter="Capture" Gesture="RightClick"/>
                        <MouseBinding Command="{Binding cmdMapSpecific}" CommandParameter="Capture" Gesture="Ctrl+RightClick"/>
                    </Button.InputBindings>
                    Capture
                </Button>
                <Button x:Name="btnCaptureMissing">
                    <Button.InputBindings>
                        <MouseBinding Command="{Binding cmdCaptureMissing}" MouseAction="LeftClick" />
                        <MouseBinding Command="{Binding cmdMap}" CommandParameter="CaptureMissing" Gesture="RightClick"/>
                        <MouseBinding Command="{Binding cmdMapSpecific}" CommandParameter="CaptureMissing" Gesture="Ctrl+RightClick"/>
                    </Button.InputBindings>
                    Capture Missing
                </Button>
                <Separator Height="9" />
                <Button x:Name="btnRestore">
                    <Button.InputBindings>
                        <MouseBinding Command="{Binding cmdRestore}" MouseAction="LeftClick" />
                        <MouseBinding Command="{Binding cmdMap}" CommandParameter="Restore" Gesture="RightClick"/>
                        <MouseBinding Command="{Binding cmdMapSpecific}" CommandParameter="Restore" Gesture="Ctrl+RightClick"/>
                    </Button.InputBindings>
                    Restore
                </Button>
                <Separator Height="9" />
                <Button x:Name="btnClear">
                    <Button.InputBindings>
                        <MouseBinding Command="{Binding cmdClear}" MouseAction="LeftClick" />
                        <MouseBinding Command="{Binding cmdMap}" CommandParameter="Clear" Gesture="RightClick"/>
                        <MouseBinding Command="{Binding cmdMapSpecific}" CommandParameter="Clear" Gesture="Ctrl+RightClick"/>
                    </Button.InputBindings>
                    Clear
                </Button>
                <Button x:Name="btnPurge">
                    <Button.InputBindings>
                        <MouseBinding Command="{Binding cmdPurge}" MouseAction="LeftClick" />
                        <MouseBinding Command="{Binding cmdMap}" CommandParameter="Purge" Gesture="RightClick"/>
                        <MouseBinding Command="{Binding cmdMapSpecific}" CommandParameter="Purge" Gesture="Ctrl+RightClick"/>
                    </Button.InputBindings>
                    Purge
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
